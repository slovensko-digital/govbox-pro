<%= render Common::OptionsComponent.new(id: "message-attachment-menu") do |options| %>
  <% options.with_menu_content do %>
    <%= link_to download_message_message_object_path(@message_attachment.message, @message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", data: { turbo_frame: "_top", turbo: false } do %>
      <%= render Icons::ArrowDownTrayComponent.new(css_classes: "h-5 w-5") %>
      Stiahnuť
    <% end %>
    <% if Current.tenant.feature_enabled?(:pdf_transformation) && @message_attachment.downloadable_as_pdf? %>
      <%= link_to download_pdf_message_message_object_path(@message_attachment.message, @message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", data: { turbo_frame: "_top", turbo: false } do %>
        <%= render Common::IconComponent.new("document-arrow-down", classes: "w-5 h-5") %>
        Stiahnuť ako PDF
      <% end %>
    <% end %>
    <% if @message_attachment.downloadable_archived_object? %>
      <%= link_to download_archived_message_message_object_path(@message_attachment.message, @message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", data: { turbo_frame: "_top", turbo: false } do %>
        <%= render Icons::ArrowDownTrayComponent.new(css_classes: "h-5 w-5") %>
        Stiahnuť archivované
      <% end %>
    <% end %>
    <% if @message_attachment.destroyable? %>
      <%= link_to message_message_object_path(@message_attachment.message, @message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", method: :delete do %>
        <%= render Common::IconComponent.new("trash", classes: "h-5 w-5") %>
        Zmazať
      <% end %>
    <% end %>
  <% end %>
<% end %>
