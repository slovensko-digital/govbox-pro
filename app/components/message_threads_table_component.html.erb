<div class="flex flex-col justify-stretch items-stretch gap-4 sm:p-4">
  <div class="flex flex-col justify-stretch items-stretch sm:rounded-md bg-white sm:border sm:border-gray-200" data-controller="form">
    <%= render MessageThreadsBulkActionsComponent.new(ids: []) %>
    <%= form_with url: bulk_actions_message_threads_path, id: :thread_checkboxes_form, data: { "form-target": "form" } do %>
      <ul role="list" id="message_threads" class="divide-y divide-gray-100">
        <% message_threads.each do |message_thread| %>
          <%= message_thread %>
        <% end %>
      </ul>
      <%= next_page_area %>
    <% end %>
  </div>
</div>
