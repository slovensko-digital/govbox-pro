<% notifications.each do |notification| %>
  <li class="group">
    <div class="relative pb-8 inline-block">
      <span class="group-last:hidden absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
      <div class="relative flex space-x-3">
        <div>
          <% recent = notification.created_at > @last_opened_at %>
          <span class="h-8 w-8 rounded-full <%= recent ? "bg-blue-200" : "bg-gray-200" %> flex items-center justify-center ring-8 ring-white">
             <%= render Common::IconComponent.new(to_icon_name(notification), classes: "w-5 h-5 text-gray-600") %>
          </span>
        </div>
        <div class="flex flex-wrap md:flex-nowrap flex-1 min-w-0 justify-between gap-x-4 gap-y-1 pt-1.5">
          <%= tag.time datetime: notification.created_at, class: "whitespace-nowrap text-right text-sm text-gray-500" do %>
            <%= nice_datetime_with_time notification.created_at %>
          <% end %>
          <div>
            <%= render notification, notification: notification %>
          </div>
        </div>
      </div>
    </div>
  </li>
<% end %>
