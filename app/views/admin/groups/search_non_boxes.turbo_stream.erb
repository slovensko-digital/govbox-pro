<%= turbo_stream.update "box-search-results" do %>
  <% if !params[:name_search].empty? %>
    <%= render partial: "admin/permissions/item_add_popup", locals: {
          title: t('admin.groups.permissions.add_popup.title.box'),
          close_path: edit_permissions_admin_tenant_group_path(Current.tenant, @group),
          items: @boxes,
          empty_message: t('admin.groups.permissions.add_popup.empty.box'),
          url: admin_tenant_group_box_groups_path(Current.tenant, @group),
          item_param_key: :box_id,
          group_id: @group.id
        } %>
  <% end %>
<% end %>
