<%= tag.turbo_frame id: "modal" do %>
  <%= render Common::ModalComponent.new(closable: true) do |modal| %>
    <% modal.with_header do %>
      Podpisovanie cez Autogram Portal
    <% end %>
    <% modal.with_modal_content do %>
      <div class="py-4">
        <div>
          <p class="pb-4">
            Kliknutím na tlačidlo nižšie spustíte proces podpisovania dokumentov cez Autogram Portal.
          </p>
        </div>
        <%= form_with model: @bundle, url: agp_bundles_path, method: :post, data: { turbo_frame: "modal" }, html: { onsubmit: "this.querySelector('[type=submit]').disabled=true; this.querySelector('[type=submit]').value='Spúšťa sa...'; this.querySelector('[data-loader]').classList.remove('hidden'); return true;" } do |f| %>
          <%= f.hidden_field :bundle_identifier %>
          <% @bundle.contracts.each_with_index do |contract, index| %>
            <%= f.fields_for :contracts, contract do |cf| %>
              <%= cf.hidden_field :contract_identifier %>
              <%= cf.hidden_field :message_object_id %>
              <%= cf.hidden_field :message_object_updated_at %>
            <% end %>
          <% end %>
          <div class="pt-4 flex items-center gap-3">
            <%= f.submit "Spustiť podpisovanie", class: "inline-flex w-full justify-center rounded-md px-3 py-2 text-sm font-semibold bg-white text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:w-auto" %>
            <div data-loader class="hidden">
              <svg class="animate-spin h-5 w-5 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
